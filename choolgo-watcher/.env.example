# 네이버 이메일 IMAP 설정
NAVER_EMAIL=your-email@naver.com
NAVER_PASSWORD=your-app-password-here

# IMAP 서버 설정 (네이버 기본값)
IMAP_HOST=imap.naver.com
IMAP_PORT=993
IMAP_TLS=true

# 이메일 폴링 설정
EMAIL_POLL_INTERVAL=60000  # 60초마다 확인 (밀리초)
EMAIL_CHECK_MAILBOX=INBOX  # 확인할 메일함
EMAIL_MARK_SEEN=true       # 처리 후 읽음 표시

# 첨부파일 임시 저장 경로
EMAIL_TEMP_DIR=./temp/email-attachments
